#!/bin/bash

check_vars() {
  declare -a vars=(LYSTYNG_DB_HOST LYSTYNG_DB_NAME LYSTYNG_DB_USER LYSTYNG_DB_PASS)

  for var_name in "${vars[@]}"
  do
    if [ -z "$(eval "echo \$$var_name")" ]; then
      errors+=($var_name)
    fi
  done

  if [ ${#errors[@]} -ne 0 ]; then
      echo "Missing environment variable(s): ${errors[*]}"
      exit 1
  fi
}

